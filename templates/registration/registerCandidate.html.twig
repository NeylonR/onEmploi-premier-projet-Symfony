{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section id="registerSection">
    <h2>Inscription</h2>

    {{ form_start(registrationForm)}}
        {{ form_row(registrationForm.firstName,{label: 'Nom'})   }}
        {{ form_row(registrationForm.lastName,{label: 'Prenom'})   }}
        {{ form_row(registrationForm.age,{label: 'Age'})   }}
        {{ form_row(registrationForm.plainPassword,{label: 'Mot de passe'}) }}
        {{ form_row(registrationForm.city,{label: 'Ville'})   }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.agreeTerms,{label: 'Acceptez les termes'})   }}

        <button type="submit" class="button">Register</button>
    {{ form_end(registrationForm) }}
</section>
{% endblock %}
